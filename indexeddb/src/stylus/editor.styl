color_white       = #fff
color_gray        = #bdc3c7
color_gray_light  = #ecf0f1
color_green       = #27ae60
color_green_light = #2ecc71
color_red         = #c0392b
color_red_light   = #e74c3c
color_blue        = #2980b9
color_blue_light  = #3498db

.editor {
  position absolute
  top 0
  right 0
  width 30%
  height 100%
  padding 0 .5em
  overflow scroll
  background-color color_gray_light
}

.editor .form {
  width 100%

  th {
    padding .5em
    background-color color_gray
    color color_white
    font-weight normal
    text-align right
    border solid 1px color_gray
  }
  
  td {
    padding .5em
    border solid 1px color_gray
    background-color color_white

    input[type="text"] {
      box-sizing border-box
      width 100%
      padding .2em
    } 
  }
}

.editor .toolbar {
  margin .5em 0
  text-align right

  .button {
    display inline-block
    margin 0 0 0 .5em
    padding .5em
    width 5em
    border-radius .2em
    text-align center
  }

  .add {
    background-color color_green_light
    box-shadow 0 .2em color_green
    color color_white

    &:hover {
      background-color color_green
    }
  }

  .delete {
    background-color color_red_light
    box-shadow 0 .2em color_red
    color color_white

    &:hover {
      background-color color_red
    }
  }

  .update {
    background-color color_blue_light
    box-shadow 0 .2em color_blue
    color color_white

    &:hover {
      background-color color_blue
    }
  }
}
