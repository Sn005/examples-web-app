color_text = #34495e

body, html {
  margin 0
  padding 0
  width 100%
  height 100%
  letter-spacing .07em
  color color_text
}

/**
 * アプリ領域。
 */
.content {
  position relative
  margin auto
  width 100%
  height 100%
  overflow hidden
}

/**
 * 左寄せ。
 */
.left {
  float left
}

/**
 * 右寄せ。
 */
.right {
  float right
}

/**
 * 回りこみ解除。
 */
.clear {
  clear both
}
